{
  // ("compiler" is required)

  "project": {
    // ("entryPointSourceFile" is required)
  },

  "policies": {
    "namespaceSupport": "conservative"
  },

  "validationRules": {
    "missingReleaseTags": "error"
  },

  "apiReviewFile": {
    "enabled": true,
    "apiReviewFolder": "./etc",
    "tempFolder": "./temp"
  },

  "apiJsonFile": {
    "enabled": true,
    "outputFolder": "./dist"
  },

  "dtsRollup": {
    "enabled": false,
    "trimming": false,

    "publishFolder": "./dist",

    "publishFolderForInternal": "./dist/internal",
    "publishFolderForBeta": "./dist/beta",
    "publishFolderForPublic": "./dist/public",

    "mainDtsRollupPath": ""
  },

  "tsdocMetadata": {
    "enabled": true,
    "tsdocMetadataPath": ""
  },

  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "ae-forgotten-export": {
        "logLevel": "warning",
        "addToApiReviewFile": true
      },
      "ae-incompatible-release-tags": {
        "logLevel": "warning",
        "addToApiReviewFile": true
      },
      "ae-internal-missing-underscore": {
        "logLevel": "warning",
        "addToApiReviewFile": true
      }
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    }
  },

  "skipLibCheck": false,
  "testMode": false
}
